@model wetest.Models.Item

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://cdn.bootcss.com/jquery/2.2.4/jquery.min.js"></script>
    <title>Delete</title>

    <script>
        function change2invalid() {
            var id = @Model.Id;
            $.ajax({
                type: "Post",
                url: "http://localhost:54378/Items/ChangeToInvalid",
                async: false,
                dataType: "json",
                data: {
                    id: id
                },
                success: function (json) {
                    console.log(json)
                },
                fail: function () {

                }
            });

        }
    </script>
</head>
<body>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Information)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Information)
        </dd>
    </dl>
    
    <button onclick="change2invalid()">Delete</button>
    <button href="/Home/TesterPage">Back</button>
</div>
</body>
</html>
